@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Beer";
}

<h1>Delete Beer</h1>

<h3>Are you sure you want to delete this beer?</h3>

@if (Model.Beer != null)
{
    <div class="mb-3">
        <h4 class="text-danger">Beer Name: @Model.Beer.Name</h4>
        <p>Brewer ID: @Model.Beer.BrewerId</p>
    </div>

    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <p class="text-warning">Beer not found.</p>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
}
